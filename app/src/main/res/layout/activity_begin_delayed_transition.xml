<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BeginDelayedTransitionActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/changeBounds"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="ChangeBounds"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"></TextView>

        <FrameLayout
            android:id="@+id/changeBounds_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/changeBounds_child"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/circle0"></ImageView>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/changeTransform"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="ChangeTransform"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"></TextView>

        <FrameLayout
            android:id="@+id/changeTransform_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/changeTransform_child"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/circle0"></ImageView>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/changeClipBounds"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="ChangeClipBounds"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"></TextView>

        <FrameLayout
            android:id="@+id/changeClipBounds_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/changeClipBounds_child"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/circle0"></ImageView>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/changeImageTransform"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="changeImageTransform"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"></TextView>

        <FrameLayout
            android:id="@+id/changeImageTransform_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/changeImageTransform_child"
                android:scaleType="fitStart"
                android:layout_width="300dp"
                android:background="@color/purple_500"
                android:layout_height="300dp"
                android:src="@mipmap/rect0"></ImageView>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/fade"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="fade"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"></TextView>

        <FrameLayout
            android:id="@+id/fade_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fade_child"
                android:scaleType="fitStart"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@mipmap/circle0"></ImageView>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/slide"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="slide"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"></TextView>

        <FrameLayout
            android:id="@+id/slide_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/slide_child"
                android:scaleType="fitStart"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@mipmap/circle0"></ImageView>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/explode"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="explode"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"></TextView>

        <RelativeLayout
            android:id="@+id/explode_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/circle0"></ImageView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="200dp"
                android:src="@mipmap/circle0"></ImageView>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/circle0"></ImageView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:layout_marginTop="200dp"
                android:src="@mipmap/circle0"></ImageView>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/path"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="slide"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"></TextView>

        <FrameLayout
            android:id="@+id/path_root"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/path_child"
                android:scaleType="fitStart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/circle0"></ImageView>
        </FrameLayout>

    </LinearLayout>
</ScrollView>